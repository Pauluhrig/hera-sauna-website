---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Sessions', href: '/sessions' },
  { name: 'Menu', href: '/menu' },
  { name: 'Gallery', href: '/galerie' },
  { name: 'Prices', href: '/preise' },
  { name: 'Contact', href: '/kontakt' },
];
---

<nav class="fixed w-full z-50 transition-all duration-300" id="main-nav">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <span class="text-2xl font-serif font-bold text-white group-hover:text-bronze-400 transition-colors">HERA</span>
        <span class="text-2xl font-serif text-bronze-400 ml-1">SAUNA</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-white/90 hover:text-white hover:bg-white/10 px-4 py-2 rounded-lg transition-all duration-200 font-medium text-sm uppercase tracking-wide"
          >
            {item.name}
          </a>
        ))}
        <a
          href="/kontakt"
          class="ml-4 bg-bronze-500 hover:bg-bronze-600 text-white px-5 py-2 rounded-lg transition-colors duration-200 font-semibold text-sm uppercase tracking-wide"
        >
          Visit Us
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden text-white p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-stone-900/95 backdrop-blur-md">
    <div class="px-4 py-4 space-y-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="block text-white/90 hover:text-white hover:bg-white/10 px-4 py-3 rounded-lg transition-all"
        >
          {item.name}
        </a>
      ))}
      <a
        href="/kontakt"
        class="block bg-bronze-500 text-white text-center px-4 py-3 rounded-lg mt-4 font-semibold"
      >
        Visit Us
      </a>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const nav = document.getElementById('main-nav');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Add background on scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      nav?.classList.add('bg-stone-900/95', 'backdrop-blur-md', 'shadow-lg');
    } else {
      nav?.classList.remove('bg-stone-900/95', 'backdrop-blur-md', 'shadow-lg');
    }
  });
</script>
