---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const images = [
  { src: '/images/01-hero-sauna-frau.jpg', alt: 'Sauna Experience' },
  { src: '/images/02-sauna-frau-sitzend.jpg', alt: 'Relaxing in Sauna' },
  { src: '/images/03-aufguss-frau-kelle.jpg', alt: 'Aufguss Ceremony' },
  { src: '/images/05-sauna-led-beleuchtung.jpg', alt: 'Sauna with LED Lighting' },
  { src: '/images/11-steam-room.jpg', alt: 'Steam Room' },
  { src: '/images/06-hot-cold-onsen.jpg', alt: 'Hot & Cold Onsen' },
  { src: '/images/08-ice-bath-gast.jpg', alt: 'Ice Bath Experience' },
  { src: '/images/09-pool-nacht.jpg', alt: 'Swimming Pool at Night' },
  { src: '/images/10-garden-sonnenschirme.jpg', alt: 'Garden Area' },
  { src: '/images/07-restaurant-terrasse.jpg', alt: 'Restaurant Terrace' },
  { src: '/images/12-liegestuehle-sonnenuntergang.jpg', alt: 'Relaxation Area' },
  { src: '/images/04-pool-frau-rueckansicht.jpg', alt: 'Pool View' },
];
---

<Layout title="Galerie" description="Explore Hera Sauna Thailand through our photo gallery.">
  <Navigation />

  <!-- Hero -->
  <section class="pt-32 pb-20 bg-stone-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-serif font-bold mb-6">
        <span class="text-amber-400">Galerie</span>
      </h1>
      <p class="text-xl text-stone-300">
        Take a visual tour of Hera Sauna
      </p>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-20 bg-stone-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {images.map((image) => (
          <div class="relative overflow-hidden rounded-xl shadow-lg group aspect-[4/3]">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-stone-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
              <p class="text-white p-4 font-medium">{image.alt}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-amber-500">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-serif font-bold text-stone-900 mb-4">
        Experience It Yourself
      </h2>
      <p class="text-lg text-stone-800 mb-6">
        Pictures can only show so much. Come visit us for the full experience!
      </p>
      <a href="/kontakt" class="inline-block bg-stone-900 hover:bg-stone-800 text-white font-semibold px-8 py-4 rounded-lg transition-colors duration-200">
        Get Directions
      </a>
    </div>
  </section>

  <Footer />
</Layout>
