---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Speisekarte" description="Discover our delicious food and drinks at Hera Sauna Thailand.">
  <Navigation />

  <!-- Hero -->
  <section class="pt-32 pb-20 bg-stone-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-serif font-bold mb-6">
        <span class="text-amber-400">Speisekarte</span>
      </h1>
      <p class="text-xl text-stone-300">
        Delicious food and refreshing drinks to complement your sauna experience
      </p>
    </div>
  </section>

  <!-- Menu PDF Embed -->
  <section class="py-20 bg-stone-50">
    <div class="max-w-5xl mx-auto px-4">
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="p-8 text-center border-b border-stone-200">
          <h2 class="text-3xl font-serif font-bold text-stone-800 mb-4">Our Menu</h2>
          <p class="text-stone-600 mb-6">
            Browse our full menu below or download it for offline viewing.
          </p>
          <a
            href="/menu/Menu.pdf"
            download
            class="inline-block bg-amber-500 hover:bg-amber-600 text-stone-900 font-semibold px-6 py-3 rounded-lg transition-colors duration-200"
          >
            Download Menu (PDF)
          </a>
        </div>

        <!-- PDF Viewer -->
        <div class="aspect-[3/4] w-full">
          <iframe
            src="/menu/Menu.pdf"
            class="w-full h-full"
            title="Hera Sauna Menu"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Info -->
  <section class="py-16 bg-amber-500">
    <div class="max-w-4xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div>
          <h3 class="text-xl font-bold text-stone-900 mb-2">Kitchen Hours</h3>
          <p class="text-stone-800">10:00 - 21:00</p>
        </div>
        <div>
          <h3 class="text-xl font-bold text-stone-900 mb-2">Bar Hours</h3>
          <p class="text-stone-800">10:00 - 22:00</p>
        </div>
        <div>
          <h3 class="text-xl font-bold text-stone-900 mb-2">Fresh & Local</h3>
          <p class="text-stone-800">Daily prepared dishes</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
