---

<Layout title="Menu" description="Discover our delicious food and drinks at Hera Sauna Pattaya - Thai and Western cuisine.">
  <Navigation />

  <!-- Hero -->
  <section class="pt-32 pb-16 bg-stone-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-serif font-bold mb-4">
        <span class="text-bronze-400">Menu</span>
      </h1>
      <p class="text-xl text-stone-300">
        Delicious food and refreshing drinks to complement your sauna experience
      </p>
    </div>
  </section>

  <!-- Quick Info -->
  <section class="bg-bronze-500 py-4">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-8 text-white text-center">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-medium">Kitchen: 10:00 - 19:00</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-medium">Bar: 10:00 - 22:00</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Menu Navigation -->
  <section class="sticky top-20 z-40 bg-white shadow-md">
    <div class="max-w-5xl mx-auto px-4">
      <div class="flex justify-center gap-2 py-3 overflow-x-auto">
        {categories.map((cat) => (
          <a
            href={`#${cat.title.toLowerCase().replace(' ', '-')}`}
            class="px-4 py-2 rounded-full bg-stone-100 hover:bg-bronze-100 text-stone-700 hover:text-bronze-700 font-medium text-sm whitespace-nowrap transition-colors"
          >
            {cat.icon} {cat.title}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Menu Sections -->
  <section class="py-12 bg-stone-50">
    <div class="max-w-5xl mx-auto px-4">
      {categories.map((category) => (
        <div id={category.title.toLowerCase().replace(' ', '-')} class="mb-16 scroll-mt-32">
          <div class="flex items-center gap-3 mb-8">
            <span class="text-4xl">{category.icon}</span>
            <h2 class="text-3xl font-serif font-bold text-stone-800">{category.title}</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {category.items.map((item) => (
              <div class="bg-white rounded-xl p-5 shadow-sm hover:shadow-md transition-shadow flex justify-between items-start">
                <div class="flex-1">
                  <h3 class="font-semibold text-stone-800 text-lg">{item.name}</h3>
                  <p class="text-stone-500 text-sm mt-1">{item.desc}</p>
                </div>
                <div class="ml-4 text-right">
                  <span class="text-bronze-600 font-bold text-lg">{item.price}</span>
                  <span class="text-stone-400 text-sm ml-1">‡∏ø</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}

      <!-- Note -->
      <div class="bg-bronze-50 border border-bronze-200 rounded-xl p-6 text-center">
        <p class="text-bronze-800">
          <strong>Note:</strong> Prices are in Thai Baht (‡∏ø). Menu items may vary based on availability.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-stone-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-serif font-bold mb-4">
        Hungry After Your Sauna Session?
      </h2>
      <p class="text-lg text-stone-300 mb-6">
        Our restaurant serves fresh, delicious food daily. Come relax and refuel!
      </p>
      <a href="/kontakt" class="inline-block bg-bronze-500 hover:bg-bronze-600 text-white font-semibold px-8 py-4 rounded-lg transition-colors duration-200">
        Visit Us
      </a>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Smooth scroll */
  html {
    scroll-behavior: smooth;
  }
</style>
