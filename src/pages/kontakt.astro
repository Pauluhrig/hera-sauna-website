---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Kontakt" description="Contact Hera Sauna Thailand - Get directions, opening hours, and more.">
  <Navigation />

  <!-- Hero -->
  <section class="pt-32 pb-20 bg-stone-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-serif font-bold mb-6">
        <span class="text-amber-400">Kontakt</span>
      </h1>
      <p class="text-xl text-stone-300">
        We'd love to see you at Hera Sauna
      </p>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="py-20 bg-stone-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Info -->
        <div>
          <h2 class="text-3xl font-serif font-bold text-stone-800 mb-8">Visit Us</h2>

          <div class="space-y-6">
            <!-- Opening Hours -->
            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-semibold text-stone-800 mb-4 flex items-center">
                <svg class="w-6 h-6 text-amber-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Opening Hours
              </h3>
              <p class="text-stone-600 text-lg">Daily: 10:00 - 22:00</p>
              <div class="mt-4 pt-4 border-t border-stone-200">
                <p class="text-amber-600 font-semibold">Aufguss Sessions:</p>
                <p class="text-stone-600">13:00 | 14:00 | 16:00 | 19:30</p>
              </div>
            </div>

            <!-- Address -->
            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-semibold text-stone-800 mb-4 flex items-center">
                <svg class="w-6 h-6 text-amber-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Location
              </h3>
              <p class="text-stone-600">
                Thailand
                <br />
                <span class="text-sm text-stone-500">(Full address to be added)</span>
              </p>
            </div>

            <!-- Contact -->
            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-semibold text-stone-800 mb-4 flex items-center">
                <svg class="w-6 h-6 text-amber-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Get in Touch
              </h3>
              <p class="text-stone-600">
                <a href="https://hera-sauna.com" class="text-amber-600 hover:text-amber-700">hera-sauna.com</a>
              </p>
            </div>
          </div>
        </div>

        <!-- Map Placeholder -->
        <div>
          <h2 class="text-3xl font-serif font-bold text-stone-800 mb-8">Find Us</h2>
          <div class="bg-stone-200 rounded-xl h-96 flex items-center justify-center">
            <div class="text-center text-stone-500">
              <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              <p>Google Maps integration coming soon</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
