---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Kontakt" description="Contact Hera Sauna Thailand - Get directions, opening hours, and more.">
  <Navigation />

  <!-- Hero -->
  <section class="pt-32 pb-20 bg-stone-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-serif font-bold mb-6">
        <span class="text-amber-400">Contact</span> Us
      </h1>
      <p class="text-xl text-stone-300">
        We'd love to see you at Hera Sauna
      </p>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="py-20 bg-stone-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Info -->
        <div>
          <h2 class="text-3xl font-serif font-bold text-stone-800 mb-8">Visit Us</h2>

          <div class="space-y-6">
            <!-- Opening Hours -->
            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-semibold text-stone-800 mb-4 flex items-center">
                <svg class="w-6 h-6 text-amber-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Opening Hours
              </h3>
              <p class="text-stone-600 text-lg">Daily: 9:00 - 22:00</p>
              <p class="text-stone-500 text-sm mt-1">Kitchen: 10:00 - 19:00</p>
              <div class="mt-4 pt-4 border-t border-stone-200">
                <p class="text-amber-600 font-semibold">Aufguss Sessions:</p>
                <p class="text-stone-600">13:00 | 14:00 | 16:00 | 19:30</p>
              </div>
            </div>

            <!-- Address -->
            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-semibold text-stone-800 mb-4 flex items-center">
                <svg class="w-6 h-6 text-amber-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Location
              </h3>
              <p class="text-stone-600">
                64/148 Thepprasit 5<br />
                Nong Prue, Bang Lamung<br />
                Chonburi 20150, Thailand
              </p>
              <a
                href="https://maps.google.com/?q=64/148+Thepprasit+5+Nong+Prue+Bang+Lamung+Chonburi+Thailand"
                target="_blank"
                class="inline-block mt-4 text-amber-600 hover:text-amber-700 font-medium"
              >
                Open in Google Maps →
              </a>
            </div>

            <!-- Phone -->
            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-semibold text-stone-800 mb-4 flex items-center">
                <svg class="w-6 h-6 text-amber-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Phone
              </h3>
              <a href="tel:+66628352395" class="text-2xl text-amber-600 hover:text-amber-700 font-semibold">
                +66 62-835-2395
              </a>
            </div>

            <!-- Entry Fee -->
            <div class="bg-amber-500 p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-semibold text-stone-900 mb-2">Entry Fee</h3>
              <p class="text-4xl font-bold text-stone-900">220 ฿</p>
              <p class="text-stone-800 text-sm mt-2">Includes all facilities & Aufguss sessions</p>
            </div>
          </div>
        </div>

        <!-- Map -->
        <div>
          <h2 class="text-3xl font-serif font-bold text-stone-800 mb-8">Find Us</h2>
          <div class="bg-white rounded-xl shadow-md overflow-hidden h-[500px]">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3892.5!2d100.89!3d12.93!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTLCsDU1JzQ4LjAiTiAxMDDCsDUzJzI0LjAiRQ!5e0!3m2!1sen!2sth!4v1600000000000!5m2!1sen!2sth"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="w-full h-full"
            ></iframe>
          </div>
          <p class="text-stone-500 text-sm mt-4 text-center">
            Near Thepprasit Night Market, Pattaya
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
