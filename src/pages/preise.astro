---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Preise" description="Pricing information for Hera Sauna Thailand.">
  <Navigation />

  <!-- Hero -->
  <section class="pt-32 pb-20 bg-stone-800 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-serif font-bold mb-6">
        <span class="text-amber-400">Preise</span>
      </h1>
      <p class="text-xl text-stone-300">
        Simple, transparent pricing for your sauna experience
      </p>
    </div>
  </section>

  <!-- Pricing -->
  <section class="py-20 bg-stone-50">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Main Entry -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8">
        <div class="bg-amber-500 p-6 text-center">
          <h2 class="text-2xl font-bold text-stone-900">Day Pass</h2>
        </div>
        <div class="p-8 text-center">
          <p class="text-5xl font-bold text-stone-800 mb-4">
            Contact Us
          </p>
          <p class="text-stone-600 mb-6">For current pricing</p>
          <ul class="text-left max-w-md mx-auto space-y-3 mb-8">
            <li class="flex items-center text-stone-700">
              <svg class="w-5 h-5 text-amber-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Full day access to sauna facilities
            </li>
            <li class="flex items-center text-stone-700">
              <svg class="w-5 h-5 text-amber-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              All Aufguss sessions included
            </li>
            <li class="flex items-center text-stone-700">
              <svg class="w-5 h-5 text-amber-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Towel and locker provided
            </li>
            <li class="flex items-center text-stone-700">
              <svg class="w-5 h-5 text-amber-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Access to relaxation areas
            </li>
          </ul>
          <a
            href="/kontakt"
            class="inline-block bg-amber-500 hover:bg-amber-600 text-stone-900 font-semibold px-8 py-4 rounded-lg transition-colors duration-200"
          >
            Contact for Pricing
          </a>
        </div>
      </div>

      <!-- Info Box -->
      <div class="bg-stone-100 rounded-xl p-6 text-center">
        <p class="text-stone-600">
          Food and drinks from our restaurant are charged separately.
          <br />
          Special rates available for groups. Contact us for details.
        </p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
